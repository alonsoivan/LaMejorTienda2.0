<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DestacadosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/modelos_destacados"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="32sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/producto1"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:background="@drawable/logo"
                        android:contentDescription="@string/_5"
                        android:isScrollContainer="false"
                        android:keepScreenOn="false"
                        android:onClick="onClick"
                        android:paddingStart="155dp"
                        android:paddingEnd="25dp" />

                    <ImageButton
                        android:id="@+id/producto2"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:background="@drawable/logo"
                        android:contentDescription="@string/_10"
                        android:isScrollContainer="false"
                        android:keepScreenOn="false"
                        android:onClick="onClick"
                        android:paddingStart="155dp"
                        android:paddingEnd="25dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/producto3"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:background="@drawable/logo"
                        android:contentDescription="@string/_15"
                        android:isScrollContainer="false"
                        android:keepScreenOn="false"
                        android:onClick="onClick"
                        android:paddingStart="155dp"
                        android:paddingEnd="25dp" />

                    <ImageButton
                        android:id="@+id/producto4"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:background="@drawable/logo"
                        android:contentDescription="@string/_20"
                        android:isScrollContainer="false"
                        android:keepScreenOn="false"
                        android:onClick="onClick"
                        android:paddingStart="155dp"
                        android:paddingEnd="25dp" />
                </TableRow>

            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/marcas_destacadas"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="32sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/marca1"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:background="@drawable/logo"
                        android:contentDescription="@string/_1"
                        android:isScrollContainer="false"
                        android:keepScreenOn="false"
                        android:onClick="onClick"
                        android:paddingStart="155dp"
                        android:paddingEnd="25dp" />

                    <ImageButton
                        android:id="@+id/marca2"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:background="@drawable/logo"
                        android:contentDescription="@string/_2"
                        android:isScrollContainer="false"
                        android:keepScreenOn="false"
                        android:onClick="onClick"
                        android:paddingStart="155dp"
                        android:paddingEnd="25dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/marca3"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:background="@drawable/logo"
                        android:contentDescription="@string/_3"
                        android:isScrollContainer="false"
                        android:keepScreenOn="false"
                        android:onClick="onClick"
                        android:paddingStart="155dp"
                        android:paddingEnd="25dp" />

                    <ImageButton
                        android:id="@+id/marca4"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_width="180dp"
                        android:layout_height="125dp"
                        android:background="@drawable/logo"
                        android:contentDescription="@string/_4"
                        android:isScrollContainer="false"
                        android:keepScreenOn="false"
                        android:onClick="onClick"
                        android:paddingStart="155dp"
                        android:paddingEnd="25dp" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btVerTodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFEB3B"
        android:onClick="onClick"
        android:text="@string/ver_todo"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>